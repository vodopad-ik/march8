{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Открыть index.html в Chrome",
            "file": "${workspaceFolder}/index.html"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Запустить скрипт через Node.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js",
            "console": "internalConsole"
        }
    ]
}